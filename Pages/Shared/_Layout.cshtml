<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MusicCenter</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/playlistpage.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/artistInfo.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/audiopage.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/favoritepage.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/search_page.css" asp-append-version="true" />
    <link rel="website icon" type="png" href="~/lib/logo.png" />
    <link rel="stylesheet" href="~/MusicCenterAPPWEB.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap" rel="stylesheet">

</head>
<body>
    <div id="audio-card-container">
        <div class="audio-card">
            <div class="top">
                <div class="pfp">
                    <div class="playing">
                        <div class="greenline line-1"></div>
                        <div class="greenline line-2"></div>
                        <div class="greenline line-3"></div>
                        <div class="greenline line-4"></div>
                        <div class="greenline line-5"></div>
                    </div>
                </div>
                <div class="texts">
                    <p class="title-1">Soldiers Rage</p>
                    <p class="title-2">Tha Mechanic</p>
                </div>
            </div>

            <div class="audio-card-controls">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" height="20" width="24" class="volume_button">
                    <path clip-rule="evenodd" d="M11.26 3.691A1.2 1.2 0 0 1 12 4.8v14.4a1.199 1.199 0 0 1-2.048.848L5.503 15.6H2.4a1.2 1.2 0 0 1-1.2-1.2V9.6a1.2 1.2 0 0 1 1.2-1.2h3.103l4.449-4.448a1.2 1.2 0 0 1 1.308-.26Zm6.328-.176a1.2 1.2 0 0 1 1.697 0A11.967 11.967 0 0 1 22.8 12a11.966 11.966 0 0 1-3.515 8.485 1.2 1.2 0 0 1-1.697-1.697A9.563 9.563 0 0 0 20.4 12a9.565 9.565 0 0 0-2.812-6.788 1.2 1.2 0 0 1 0-1.697Zm-3.394 3.393a1.2 1.2 0 0 1 1.698 0A7.178 7.178 0 0 1 18 12a7.18 7.18 0 0 1-2.108 5.092 1.2 1.2 0 1 1-1.698-1.698A4.782 4.782 0 0 0 15.6 12a4.78 4.78 0 0 0-1.406-3.394 1.2 1.2 0 0 1 0-1.698Z" fill-rule="evenodd"></path>
                </svg>
                <div class="audio-card-volume">
                    <div class="slider">
                        <div class="green"></div>
                    </div>
                    <div class="circle"></div>
                </div>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" height="24" width="24">
                    <path clip-rule="evenodd" d="M12 21.6a9.6 9.6 0 1 0 0-19.2 9.6 9.6 0 0 0 0 19.2Zm.848-12.352a1.2 1.2 0 0 0-1.696-1.696l-3.6 3.6a1.2 1.2 0 0 0 0 1.696l3.6 3.6a1.2 1.2 0 0 0 1.696-1.696L11.297 13.2H15.6a1.2 1.2 0 1 0 0-2.4h-4.303l1.551-1.552Z" fill-rule="evenodd"></path>
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" height="24" width="24">
                    <path clip-rule="evenodd" d="M21.6 12a9.6 9.6 0 1 1-19.2 0 9.6 9.6 0 0 1 19.2 0ZM8.4 9.6a1.2 1.2 0 1 1 2.4 0v4.8a1.2 1.2 0 1 1-2.4 0V9.6Zm6-1.2a1.2 1.2 0 0 0-1.2 1.2v4.8a1.2 1.2 0 1 0 2.4 0V9.6a1.2 1.2 0 0 0-1.2-1.2Z" fill-rule="evenodd"></path>
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" height="24" width="24">
                    <path clip-rule="evenodd" d="M12 21.6a9.6 9.6 0 1 0 0-19.2 9.6 9.6 0 0 0 0 19.2Zm4.448-10.448-3.6-3.6a1.2 1.2 0 0 0-1.696 1.696l1.551 1.552H8.4a1.2 1.2 0 1 0 0 2.4h4.303l-1.551 1.552a1.2 1.2 0 1 0 1.696 1.696l3.6-3.6a1.2 1.2 0 0 0 0-1.696Z" fill-rule="evenodd"></path>
                </svg>
                <div class="air"></div>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="2" stroke-linejoin="round" stroke-linecap="round" stroke="currentColor" fill="none" height="20" width="24">
                    <path d="M3.343 7.778a4.5 4.5 0 0 1 7.339-1.46L12 7.636l1.318-1.318a4.5 4.5 0 1 1 6.364 6.364L12 20.364l-7.682-7.682a4.501 4.501 0 0 1-.975-4.904Z"></path>
                </svg>
            </div>
            <div class="audio-card-time">
                <div class="elapsed"></div>
            </div>
            <p class="timetext time_now">1:31</p>
            <p class="timetext time_full">3:46</p>
        </div>
    </div>
    <div class="menu-strip-container" id="menu-strip-playlist">
        <div class="title-menu-strip">Các danh sách phát</div>
        <hr />
    </div>
    <input type="button" id='message-box' style='min-width: 100px; height: 50px; background-color: rgb(255, 70, 70); z-index: 999;border: none; border-radius: 100px; box-shadow: 6px 6px 6px rgb(20,20,20); color: white; position: fixed; bottom: 10px; left: auto; right: 10px; display: none'></input>
    <header>
        <div class="header">
            <div id='logo' class="logo" style="cursor: pointer" asp-page="/index"><img src="~/lib/logo.png" alt=""></div>
            <div class="header-control">
                <button class="control-btn" id="farvorite" onclick="openFavoriteList()">
                    <img src="~/lib/heart-fill-com.svg" style="width: 30px; height: 30px" />
                </button>
                <button class="control-btn" id="browser" onclick="openPage('/Categorys')">
                    <img src="~/lib/category.png" style="width: 30px; height: 30px" />

                </button>
                <div class="search-container">
                    <div class="search-button" id="search-button"><img src="~/lib/magnifying-glass.png"/></div>
                    <input type="text" name="" placeholder="What do you want to play?" id="search">
                </div>
            </div>
            <a style="text-decoration:none" href="/premium_register">
                <div class="premium-nav-container">
                    <img src="~/lib/crown-minimalistic-svgrepo-com.svg" />
                    Premium
                </div>
            </a>
            <div class="account" id="account">
                <input class="account-control" type="button" name="" id="signup" value="Sign up" onclick="openPage('/signin')">
                <input class="account-control" type="button" name="" id="signin" value="Log in" onclick="openPage('/login')">
                <div id='account-select' class='account-select'>
                    <hr style="width: 100%;margin: 5px auto; background-color: rgb(200,200,200,0.5)" />
                    <div class='account-option'>
                        <div class="account-option-icon"><img src="~/lib/profile-user-icon.png" /></div><div class='account-option-title'><span class='account-option-content'>Cá nhân</span></div>
                    </div>
                    <div class='account-option' onclick="">
                        <div class="account-option-icon"><img src="~/lib/play-svgrepo-com.svg" /></div><div class='account-option-title'><span class='account-option-content'>Danh sách phát</span></div>
                    </div>
                    <div class='account-option' onclick="openFavoriteList()">
                        <div class="account-option-icon"><img src="~/lib/favourite.png" /></div><div class='account-option-title'><span class='account-option-content'>Yêu thích</span></div>
                    </div>
                    <hr style="width: 100%;margin: 5px auto; background-color: rgb(200,200,200,0.5)"/>
                    <div class='account-option' id="account-option-logout">
                        <div class="account-option-icon"><img src="~/lib/logout.png" /></div><div class='account-option-title'><span class='account-option-content'>Đăng xuất</span></div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div id="container">
        <main role="main" class="pb-3">
            <div class="leftside">
                <div class="header-leftside">
                    <div class="leftside-title">
                        <a href="#" style="color: rgb(146, 146, 146); font-size: 19px; line-height: 50px; margin-left: 15px; cursor: pointer; text-decoration: none;">
                            ▶ PlayList
                        </a>
                    </div>
                    <button id="add-playlist">+</button>
                </div>
                <div id="playlist-box" class="leftside-content">
                    <div class="playlist-add-container">
                        <span>Thêm danh sách phát</span>
                        <div class="playlist-add-content">
                            <input id="playlist-add-name" type="text" placeholder="Tên danh sách" />
                        </div>
                        <div class="playlist-add-control">
                            <input class="playlist-add-button" id="playlist-add-cancel" type="button" value="Hủy" style="background-color: #E76F51" />
                            <input class="playlist-add-button" id="playlist-add-sumbit" type="button" value="Tạo" style="background-color: #2A9D8F" />
                        </div>                    
                    </div>
                    <div class='playlist-container'>
                        <div class='palette'>
                            <div class='color'><span></span></div>
                            <div class='color'><span></span></div>
                            <div class='color'><span></span></div>
                            <div class='color'><span></span></div>
                            <div class='color'><span></span></div>
                        </div>
                        <div id='stats'>
                            <span id='stats-name'>53421 saves</span>
                            <svg xmlns='http://www.w3.org/2000/svg' width='18' height='18' viewBox='0 0 18 18'>
                                <path d='M4 7.5c-.83 0-1.5.67-1.5 1.5s.67 1.5 1.5 1.5S5.5 9.83 5.5 9 4.83 7.5 4 7.5zm10 0c-.83 0-1.5.67-1.5 1.5s.67 1.5 1.5 1.5 1.5-.67 1.5-1.5-.67-1.5-1.5-1.5zm-5 0c-.83 0-1.5.67-1.5 1.5s.67 1.5 1.5 1.5 1.5-.67 1.5-1.5S9.83 7.5 9 7.5z'></path>
                            </svg>
                        </div>
                    </div>
                </div>
                <div class="leftside-footer">
                    <div class="leftside-footer content">
                        <a class="h9hr8347nt" href="#">Điều khoản</a><a class="h9hr8347nt" href="#">Hướng dẫn</a>
                    </div>
                    <div class="leftside-footer copyright">
                        &copy DoThanhTung - 2024
                    </div>
                </div>
            </div>
            @RenderBody()
            <div class="right-side off" id="right-side">
                <div class="toggle-rightside-button" id="toggle-rightside-button">
                    <img src="~/lib/openrightside.png"/>
                </div>
                <div class="rightside-main">
                    <div class="right-side-song-info">
                        <img id="right-side-record-cover-photo" src="~/lib/list.png"/>
                        <div class="right-side-info-artist">
                            <img id="right-side-artist-avt"/>
                            <div style="display: block; height: 80%; text-overflow: ellipsis; white-space: nowrap; overflow: hidden">
                                <p id="right-side-record-name"></p>
                                <a id="right-side-artist-stagename"></a>
                            </div>
                        </div>
                        <div class="right-side-lyric-container">
                            <p style="font-size: 14px; font-weight: 100; color: white">Lời bài hát (Lyrics)</p>
                            <hr />
                            <textarea id="right-side-song-lyric" readonly></textarea>
                        </div>
                        <div class="right-side-description-container">
                            <p style="font-size: 14px; font-weight: 100; color: white">Thông tin bài hát</p>
                            <hr />
                            <textarea id="right-side-song-description" readonly></textarea>
                        </div>
                    </div>
                </div>
                <div class="right-side-audio-container">
                    <div class="right-side-audio-player">
                        <div class="controls">
                            <div class="play-container">
                                <div class="toggle-play pause"><img src="~/lib/pause.png" /></div>
                            </div>
                            <div class="volume-container">
                                <div class="volume-button">
                                    <img src='~/lib/volume-max.png' />
                                </div>

                                <div class="volume-slider">
                                    <div class="volume-percentage"></div>
                                </div>
                            </div>
                            <div class="time">
                                <div class="current">0:00</div>
                                <div class="divider">/</div>
                                <div class="length"></div>
                            </div>
                        </div>
                        <div class="timeline">
                            <div class="progress"></div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/audio.js" asp-append-version="true"></script>
    <script src="~/js/page.js" asp-append-version="true"></script>
    <script src="~/js/jquery-3.7.1.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>